{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/", "dest": "/index.html" },
    { "src": "/view", "dest": "/view.html" },
    { "src": "/success", "dest": "/success.html" },
    { "src": "/admin", "dest": "/admin.html" }
  ]
}
